{
  "name": "varvara-css",
  "version": "0.2.0-alpha.11",
  "license": "MIT",
  "description": "CSS library of customizable UI components based on CSS Variables.",
  "author": "Marc Marin√© <shenobi@gmail.com>",
  "homepage": "https://github.com/marcmarine/varvara",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcmarine/varvara.git",
    "directory": "packages/css"
  },
  "keywords": [
    "css",
    "css-variables",
    "varvara-css"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "autoprefixer": "^10.4.19",
    "chokidar-cli": "^3.0.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-prefixer": "^3.0.0",
    "prejss-cli": "^0.3.3",
    "tailwindcss": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "type": "module",
  "unpkg": "dist/varvara.css",
  "exports": {
    ".": "./dist/varvara.css",
    "./variables": "./dist/variables.css",
    "./components": "./dist/components.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:css": "postcss src/*.css --dir dist",
    "build:js": "prejss-cli dist/*.css --out-dir dist",
    "build": "bun run build:css && bun run build:js",
    "dev": "chokidar src -c 'bun run build'"
  }
}
