---
import { getEntry } from 'astro:content';
import Layout from '../layouts/Page.astro'

const variables = await getEntry('docs', 'index');
const { Content, headings } = await variables.render()

const links = headings.filter(heading => heading.depth === 2).map((heading) => ({
		text: heading.text,
		href: `/get-started#${heading.slug}`
	}))
---

<Layout items={links} backHref="/" className="article row-start-1 row-end-4">
  <Content />
	<div class="py-8 flex justify-between">
		<a href="/" class="font-semibold text-lg hover:underline">
			← Home
		</a>
		<a href="/variables" class="font-semibold text-lg hover:underline">
			CSS Variables →
		</a>
	</div>
</Layout>
