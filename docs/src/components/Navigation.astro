---
interface Props {
	items?: Item[];
}

interface Item {
 text: string
 href: string
}

const defaultItems: Item[] = [
	{
		text: 'Get started',
		href: '/get-started'
	},
	{
		text: 'CSS Variables',
		href: '/variables'
	},
	{
		text: 'Components',
		href: '/components'
	},
	{
		text: 'GitHub',
		href: 'https://www.github.com/marcmarine'
	},
]

const { items = defaultItems} = Astro.props
---

<nav class="bg-grid-top bg-grid-bottom">
  <ul class="button-group">
		{items.map(item => (
			<li class="w-full">
				<a href={ item.href } class="button">
					{item.text}
				</a>
			</li>
		))}
</ul>